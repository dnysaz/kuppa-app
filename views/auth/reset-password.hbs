{{set "title" title}}
{{set "description" description}}

<div class="min-h-[80vh] flex flex-col items-center justify-center px-4">
    
    {{!-- Flash Message Shortcodes --}}
    {{{ flash errorMessage 'error' }}}
    {{{ flash message 'success' }}}

    <div class="max-w-md w-full bg-white border border-gray-100 rounded-[2.5rem] p-10">
        <header class="text-center mb-10">
            <a href="{{route 'home'}}" class="inline-block mb-6 transform hover:scale-105 transition-transform">
                <img src="{{asset 'logo/1.3.png'}}" alt="Kuppa.js Logo" class="h-12 w-auto mx-auto">
            </a>
            <h1 class="text-3xl font-black text-gray-900 tracking-tight">
                {{ title }}
            </h1>
            <p class="text-sm text-gray-400 mt-2">Enter your new password to regain access to your account.</p>
        </header>

        <form action="{{route 'password.update'}}" method="POST" class="space-y-5">
            {{!-- New Password Input --}}
            <div class="space-y-2">
                <label for="password" class="block text-[10px] uppercase tracking-widest font-bold text-gray-400 ml-1">New Password</label>
                <input type="password" name="password" id="password" required 
                    class="w-full px-5 py-4 bg-gray-50 border {{#if errorMessage}}border-red-200 bg-red-50/30{{else}}border-gray-100{{/if}} rounded-2xl focus:ring-4 focus:ring-black/5 focus:bg-white focus:border-black outline-none transition-all duration-300 placeholder:text-gray-300"
                    placeholder="••••••••">
            </div>

            {{!-- Confirm New Password Input --}}
            <div class="space-y-2">
                <label for="password_confirmation" class="block text-[10px] uppercase tracking-widest font-bold text-gray-400 ml-1">Confirm New Password</label>
                <input type="password" name="password_confirmation" id="password_confirmation" required 
                    class="w-full px-5 py-4 bg-gray-50 border {{#if errorMessage}}border-red-200 bg-red-50/30{{else}}border-gray-100{{/if}} rounded-2xl focus:ring-4 focus:ring-black/5 focus:bg-white focus:border-black outline-none transition-all duration-300 placeholder:text-gray-300"
                    placeholder="••••••••">
            </div>

            {{!-- Submit Button --}}
            <button type="submit" 
                class="w-full py-4 bg-black text-white rounded-2xl font-bold hover:bg-neutral-800 transform active:scale-[0.97] transition-all duration-300 mt-4">
                Update Password
            </button>
        </form>

        <footer class="mt-10 text-center">
            <p class="text-xs text-gray-400 font-medium">
                Wait, I remember it! <a href="{{route 'login'}}" class="text-black font-bold hover:underline ml-1">Back to Login</a>
            </p>
        </footer>
    </div>
</div>