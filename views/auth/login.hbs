{{set "title" title}}
{{set "description" message}}

<div class="min-h-[80vh] flex flex-col items-center justify-center px-4">
    
    {{!-- Flash Message Shortcodes --}}
    {{{ flash errorMessage 'error' }}}
    {{{ flash message 'success' }}}

    <div class="max-w-md w-full bg-white border border-gray-100 rounded-[2.5rem] p-10">
        <header class="text-center mb-10">
            <a href="{{route 'home'}}" class="inline-block mb-6 transform hover:scale-105 transition-transform">
                <img src="{{asset 'logo/1.3.png'}}" alt="Kuppa.js Logo" class="h-12 w-auto mx-auto">
            </a>
            <h1 class="text-3xl font-black text-gray-900 tracking-tight">
                Welcome back
            </h1>
            <p class="text-sm text-gray-400 mt-2">Enter your credentials to access your account</p>
        </header>

        <form action="{{route 'login.post'}}" method="POST" class="space-y-5">
            {{!-- Email Input --}}
            <div class="space-y-2">
                <label for="email" class="block text-[10px] uppercase tracking-widest font-bold text-gray-400 ml-1">Email Address</label>
                <input type="email" name="email" id="email" value="{{ oldEmail }}" required 
                    class="w-full px-5 py-4 bg-gray-50 border {{#if errorMessage}}border-red-200 bg-red-50/30{{else}}border-gray-100{{/if}} rounded-2xl focus:ring-4 focus:ring-black/5 focus:bg-white focus:border-black outline-none transition-all duration-300 placeholder:text-gray-300"
                    placeholder="name@example.com">
            </div>

            {{!-- Password Input --}}
            <div class="space-y-2">
                <div class="flex justify-between items-center ml-1">
                    <label for="password" class="block text-[10px] uppercase tracking-widest font-bold text-gray-400">Password</label>
                    <a href="{{route 'password.request'}}" class="text-[10px] uppercase tracking-widest font-bold text-gray-400 hover:text-black transition-colors">
                        Forgot?
                    </a>
                </div>
                <input type="password" name="password" id="password" required 
                    class="w-full px-5 py-4 bg-gray-50 border {{#if errorMessage}}border-red-200 bg-red-50/30{{else}}border-gray-100{{/if}} rounded-2xl focus:ring-4 focus:ring-black/5 focus:bg-white focus:border-black outline-none transition-all duration-300 placeholder:text-gray-300"
                    placeholder="••••••••">
            </div>

            {{!-- Submit Button --}}
            <button type="submit" 
                class="w-full py-4 bg-black text-white rounded-2xl font-bold hover:bg-neutral-800 transform active:scale-[0.97] transition-all duration-300 mt-4">
                Sign In
            </button>
        </form>

        {{!-- Social Login Divider --}}
        <div class="relative my-10">
            <div class="absolute inset-0 flex items-center">
                <div class="w-full border-t border-gray-100"></div>
            </div>
            <div class="relative flex justify-center text-[10px] uppercase tracking-[0.2em]">
                <span class="px-4 bg-white text-gray-400 font-bold">Or</span>
            </div>
        </div>

        {{!-- Google Login Button --}}
        <a href="{{route 'google.login'}}" 
            class="flex items-center justify-center gap-3 w-full py-4 bg-white border border-gray-100 text-gray-700 rounded-2xl font-bold hover:bg-gray-50 hover:border-gray-200 transform active:scale-[0.97] transition-all duration-300">
            <svg class="h-5 w-5" viewBox="0 0 24 24">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            Google
        </a>

        <footer class="mt-10 text-center">
            <p class="text-xs text-gray-400 font-medium">
                New here? <a href="{{route 'register'}}" class="text-black font-bold hover:underline ml-1">Create Account</a>
            </p>
        </footer>
    </div>
</div>