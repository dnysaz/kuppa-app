{{set "title" title}}
{{set "description" description}}

<section>
    {{> brandHeader}}

    {{> submenu}}

    <div class="gap-8">
        <div class="bg-white border border-neutral-200 rounded-xl p-6 shadow-sm">
            <div class="flex items-center justify-between mb-8">
                <div class="flex items-center space-x-3">
                    <h2 class="text-sm font-semibold uppercase tracking-wider text-neutral-500">Profile Info</h2>
                    <span class="px-2 py-1 text-[10px] font-bold bg-green-100 text-green-700 rounded-full uppercase tracking-tighter">Active</span>
                </div>
                
                {{!-- Quick Link to Edit --}}
                <a href="{{route 'profile.edit'}}" class="text-[10px] font-bold uppercase tracking-widest text-neutral-400 hover:text-black transition-colors">
                    Manage Data
                </a>
            </div>
            
            <div class="space-y-8">
                <div class="flex items-center space-x-6">
                    {{!-- Avatar --}}
                    <div class="w-20 h-20 rounded-full bg-black flex items-center justify-center text-white text-2xl font-bold border border-neutral-100 shadow-xl shadow-black/5 overflow-hidden">
                        {{#if userData.avatar}}
                            <img src="{{userData.avatar}}" alt="{{userData.fullName}}" class="w-full h-full object-cover">
                        {{else}}
                            <span class="lowercase">
                                {{#if userData.fullName}}
                                    {{slice userData.fullName 0 1}}
                                {{else}}
                                    {{slice userData.email 0 1}}
                                {{/if}}
                            </span>
                        {{/if}}
                    </div>
                    
                    <div>
                        <p class="text-[10px] text-neutral-400 font-bold uppercase tracking-widest mb-1">Full Name</p>
                        <p class="text-xl font-bold text-neutral-900 tracking-tight">
                            {{#if userData.fullName}}{{ userData.fullName }}{{else}}Not Set{{/if}}
                        </p>
                        <p class="text-xs text-neutral-500 mt-1">{{ userData.email }}</p>
                    </div>
                </div>

                <div class="pt-8 border-t border-neutral-50 grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div>
                        <p class="text-[10px] text-neutral-400 font-bold uppercase tracking-widest mb-2">Account ID</p>
                        <p class="text-[11px] font-mono text-neutral-500 bg-neutral-50 px-3 py-2 rounded-lg border border-neutral-100 inline-block w-full truncate">
                            {{ userData.id }}
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>